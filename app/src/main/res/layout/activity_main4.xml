<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.evolved.widgets.Main4Activity">


        <RelativeLayout
            android:layout_width="345dp"
            android:layout_height="479dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.521"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <TextView
                android:id="@+id/textViewWilayah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="15dp"
                android:text="Wilayah"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.085"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.063" />

            <Spinner
                android:id="@+id/spinnerProvinsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewWilayah"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="17dp"
                android:entries="@array/provinsi"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="197dp" />

            <Spinner
                android:id="@+id/spinnerKota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/spinnerProvinsi"
                android:layout_marginTop="14dp"
                android:entries="@array/provinsi"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="197dp" />

            <Button
                android:id="@+id/buttonOK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textViewWilayah"
                android:layout_below="@+id/spinnerKota"
                android:layout_marginTop="64dp"
                android:text="OK" />

            <TextView
                android:id="@+id/textViewHasil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/buttonOK"
                android:layout_marginTop="54dp"
                android:text="TextView"
                android:textSize="24sp" />

        </RelativeLayout>

    </android.support.constraint.ConstraintLayout>
</ScrollView>